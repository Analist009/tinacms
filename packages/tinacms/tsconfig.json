{
  "extends": "../../base.tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@tinacms/toolkit": ["./src/toolkit/index.ts"],
      "@toolkit/*": ["./src/toolkit/*"],
      "minisearch": ["./src/empty-module.ts"]
    },
  },
  "exclude": [
    "src/**/*.test.tsx",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "dist"
  ],
  "tsc-alias": {
    "replacers": {
      "base-url": {
        "enabled": false
      }
    }
  },
  "include": ["src"]
}
